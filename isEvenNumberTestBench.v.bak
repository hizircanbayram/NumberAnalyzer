module isEvenNumberTestBench();
reg clk;
reg reset;
reg go_i;
reg[31:0] number;
reg result;
reg counter;

isEvenNumber ien(clk, reset, go_i, number, counter, result);
// counter'in 0 lanmasi gerekiyor her turdan sonra
always begin
#10 clk = ~clk;
end

initial begin
clk = 1'b0;
counter = 1'b0;
reset = 1'b0;
result = 1'b0;
number = 32'b00000000000000000000000011111111;
go_i = 1'b1;
end

always @(posedge clk) begin
	if (counter == 1'b1)
	begin
	$monitor("result = %2d", result); 
	$finish;
	end
end

endmodule